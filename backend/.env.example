# Server Configuration
PORT=3001

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=prompt_compression_db
DB_SYNCHRONIZE=true # set to false in production

# JWT Configuration
JWT_SECRET=YOUR_VERY_VERY_SECRET_KEY_THAT_IS_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=1h # e.g., 60s, 1h, 7d

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_API_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_HTTP_REFERER=http://localhost:3000 # Your app's URL
OPENROUTER_X_TITLE=Prompt Compression Contest # Your app's name

# Evaluation Service Configuration
EVALUATION_NUM_ATTEMPTS=3
OPENROUTER_MODELS_CACHE_TTL_MS=3600000 # Cache TTL for OpenRouter models list in milliseconds (e.g., 1 hour)

# Node Environment (useful for conditional logic, e.g. in AllExceptionsFilter)
# NODE_ENV=development # or production, test